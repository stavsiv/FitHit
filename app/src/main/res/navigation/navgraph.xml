<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/fragmentLogin">

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.example.fithit.Fragments.FragmentLogin"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentRegister"
            app:destination="@id/fragmentRegister" />
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentMain"
            app:destination="@id/fragmentMain" />
        <action
            android:id="@+id/action_fragmentPersonalArea_to_fragmentMain"
            app:destination="@id/fragmentMain"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/fragmentRegister"
        android:name="com.example.fithit.Fragments.FragmentRegister"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_fragmentRegister_to_fragmentLogin"
            app:destination="@id/fragmentLogin" />
    </fragment>

    <fragment
        android:id="@+id/fragmentPersonalArea"
        android:name="com.example.fithit.Fragments.FragmentPersonalArea"
        android:label="FragmentPersonalArea" >
        <action
            android:id="@+id/action_fragmentPersonalArea_to_fragmentMain2"
            app:destination="@id/fragmentMain" />
    </fragment>

    <fragment
        android:id="@+id/fragmentWorkouts"
        android:name="com.example.fithit.Fragments.FragmentWorkouts"
        android:label="fragment_workouts"
        tools:layout="@layout/fragment_workouts">
        <action
            android:id="@+id/action_fragmentWorkouts_to_fragmentWorkoutDetails"
            app:destination="@id/fragmentWorkoutDetails" />
    </fragment>

    <fragment
        android:id="@+id/fragmentMain"
        android:name="com.example.fithit.Fragments.FragmentMain"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_fragmentMain_to_fragmentPersonalArea"
            app:destination="@id/fragmentPersonalArea" />
        <action
            android:id="@+id/action_fragmentMain_to_fragmentWorkouts"
            app:destination="@id/fragmentWorkouts" />
        <action
            android:id="@+id/action_fragmentMain_to_customWorkoutDialogFragment"
            app:destination="@id/customWorkoutDialogFragment" />
        <action
            android:id="@+id/action_fragmentMain_to_addMetricDialogFragment"
            app:destination="@id/addMetricDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/addMetricDialogFragment"
        android:name="com.example.fithit.Fragments.CircularMetricDialogFragment"
        android:label="AddMetricDialogFragment" >
        <argument
            android:name="workoutId"
            app:argType="integer" />
        <action
            android:id="@+id/action_postWorkoutMetricsDialog_to_fragmentMain"
            app:destination="@id/fragmentMain"
            app:popUpTo="@id/fragmentMain"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/customWorkoutDialogFragment"
        android:name="com.example.fithit.Fragments.CustomWorkoutDialogFragment"
        android:label="CustomWorkoutDialogFragment" >
        <action
            android:id="@+id/action_CustomWorkoutDialogFragment_to_fragmentWorkoutDetails"
            app:destination="@id/fragmentWorkoutDetails" />
    </fragment>

    <fragment
        android:id="@+id/fragmentWorkoutDetails"
        android:name="com.example.fithit.Fragments.FragmentWorkoutDetails"
        android:label="fragment_workout_details"
        tools:layout="@layout/fragment_workout_details">
        <action
            android:id="@+id/action_fragmentWorkoutDetails_to_fragmentMain"
            app:destination="@id/fragmentMain" />
        <action
            android:id="@+id/action_fragmentWorkoutDetails_to_addMetricDialogFragment"
            app:destination="@id/addMetricDialogFragment" />

    </fragment>

</navigation>