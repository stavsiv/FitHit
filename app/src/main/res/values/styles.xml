<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCalendarView" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@android:color/black</item>
        <item name="android:unfocusedMonthDateColor">@android:color/darker_gray</item>
        <item name="android:selectedDateVerticalBar">@android:color/holo_red_dark</item>
        <item name="android:selectedWeekBackgroundColor">@android:color/transparent</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="CalendarDateTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/calendar_date_selector</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="CalendarWeekDayTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>