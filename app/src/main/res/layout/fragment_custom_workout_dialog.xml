<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/duration_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/duration_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:minHeight="48dp"
            android:maxLength="2"
            android:digits="0123456789" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/exercise_distribution"
        android:textStyle="bold" />

    <!-- Strength Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/strength" />

        <SeekBar
            android:id="@+id/strength_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <TextView
            android:id="@+id/strength_percent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/zero_percent" />

    </LinearLayout>

    <!-- Cardio Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/cardio" />

        <SeekBar
            android:id="@+id/cardio_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <TextView
            android:id="@+id/cardio_percent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/zero_percent" />

    </LinearLayout>

    <!-- Stretching Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/stretching" />

        <SeekBar
            android:id="@+id/stretching_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <TextView
            android:id="@+id/stretching_percent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/zero_percent" />

    </LinearLayout>

    <!-- Balance Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/balance" />

        <SeekBar
            android:id="@+id/balance_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <TextView
            android:id="@+id/balance_percent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/zero_percent" />

    </LinearLayout>

    <!-- Total Percentage Display -->
    <TextView
        android:id="@+id/total_percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/total_zero_percent"
        android:textStyle="bold" />

    <!-- Add Generate Workout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/generate_workout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/generate_workout"
        android:padding="12dp" />

</LinearLayout>